rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to check if the user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Dashboards: Only owner can access
    match /dashboards/{dashboardId} {
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      
      // Frames subcollection
      match /frames/{frameId} {
        allow read, write: if isAuthenticated() && get(/databases/$(database)/documents/dashboards/$(dashboardId)).data.ownerId == request.auth.uid;
      }
    }

    // User profiles
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Displays
    match /displays/{displayId} {
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
    
    // Notes
    match /notes/{noteId} {
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
    
    // Tasks
    match /tasks/{taskId} {
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
    
    // Integrations (OAuth tokens) - document ID is the user's UID
    match /integrations/{userId} {
       allow read, write: if isOwner(userId);
       
       // Allow access to accounts subcollection
       match /accounts/{accountId} {
         allow read, write: if isOwner(userId);
       }
    }
    
    // Cached calendar events - document ID is the user's UID
    match /cachedEvents/{userId} {
       allow read, write: if isOwner(userId);
    }
    
    // Households - document ID is the user's UID
    match /households/{userId} {
       allow read, write: if isOwner(userId);
    }
  }
}
